@page "/adminpanel"

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="admin-card shadow-lg">
        <h1 class="text-center mb-4 text-primary">Admin Dashboard</h1>
        <p class="text-center text-muted mb-5">Manage your system efficiently</p>

        <div class="row g-4">
            <div class="col-md-4">
                <a href="/admin" class="text-decoration-none">
                    <div class="card-option h-100 p-4 text-center bg-white rounded-3 shadow-sm hover-scale">
                        <i class="bi bi-person-circle display-4 text-primary"></i>
                        <h3 class="mt-3 mb-2">Users</h3>
                        <p class="text-muted">Manage user accounts and permissions</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/patients" class="text-decoration-none">
                    <div class="card-option h-100 p-4 text-center bg-white rounded-3 shadow-sm hover-scale">
                        <i class="bi bi-heart-pulse display-4 text-success"></i>
                        <h3 class="mt-3 mb-2">Patients</h3>
                        <p class="text-muted">View and update patient records</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/medicine" class="text-decoration-none">
                    <div class="card-option h-100 p-4 text-center bg-white rounded-3 shadow-sm hover-scale">
                        <i class="bi bi-capsule display-4 text-warning"></i>
                        <h3 class="mt-3 mb-2">Medication</h3>
                        <p class="text-muted">Track and manage medications</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

