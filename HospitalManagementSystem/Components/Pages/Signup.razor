@page "/signup"
@inject HttpClient Http
@rendermode InteractiveServer
@inject NavigationManager Navigation

<style>
    .gradient-bg {
        background: linear-gradient(135deg, rgba(210, 235, 255, 0.95) 0%, rgba(240, 248, 255, 0.95) 50%, rgba(225, 245, 254, 0.95) 100%);
    }

    .card {
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 119, 182, 0.12);
        border: none;
    }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #dee2e6;
    }

    .gradient-bg-teal {
        background: linear-gradient(135deg, rgba(224, 242, 241, 0.98) 0%, rgba(178, 223, 219, 0.95) 50%, rgba(128, 203, 196, 0.9) 100%);
    }

    .gradient-card-teal {
        background: linear-gradient(to right bottom, rgba(255, 255, 255, 0.9) 0%, rgba(236, 253, 245, 0.9) 100%);
        backdrop-filter: blur(8px);
    }
</style>

<div class="vh-100 gradient-bg d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card overflow-hidden">
                    <div class="row g-0">
                        <!-- Image Column -->
                        <div class="col-md-6 d-none d-md-flex align-items-center justify-content-center"
                             style="background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);">
                            <img src="images/hospital-crm.jpg" class="img-fluid p-5" style="max-height: 400px;"
                                 alt="Medical professionals illustration">
                        </div>

                        <!-- Form Column -->
                        <div class="col-md-6 p-5">
                            <div class="text-center mb-4">
                                <h3 class="fw-bold text-primary">Hospital Staff Registration</h3>
                                <p class="text-muted">Create your account to access the management system</p>
                            </div>

                            <form @onsubmit="HandleSignup">
                                <!-- Your form fields here -->
                                <div class="mb-3">
                                    <input @bind="fullName" type="text" class="form-control" placeholder="Full Name" required />
                                </div>

                                <div class="mb-3">
                                    <input @bind="username" type="text" class="form-control" placeholder="Username" required />
                                </div>

                                <div class="mb-3">
                                    <input @bind="password" type="password" class="form-control" placeholder="Password" required />
                                </div>

                                <div class="mb-4">
                                    <select @bind="role" class="form-select" required>
                                        <option value="">Select Role</option>
                                        <option value="Admin">Administrator</option>
                                        <option value="Doctor">Doctor</option>
                                        <option value="Nurse">Nurse</option>
                                    </select>
                                </div>

                                @if (!string.IsNullOrEmpty(errorMessage))
                                {
                                    <div class="alert alert-danger mb-3">@errorMessage</div>
                                }

                                <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                                    Register Account
                                </button>

                                <p class="text-center text-muted mb-0">
                                    Already have an account? <a href="/login" class="text-primary fw-semibold">Sign In</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string fullName = string.Empty;
    private string username = string.Empty;
    private string password = string.Empty;
    private string role = string.Empty;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    private async Task HandleSignup()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(fullName) ||
            string.IsNullOrWhiteSpace(username) ||
            string.IsNullOrWhiteSpace(password) ||
            string.IsNullOrWhiteSpace(role))
        {
            errorMessage = "All fields are required";
            return;
        }

        try
        {
            var signupRequest = new SignupRequest
                {
                    Username = username,
                    Password = password,
                    FullName = fullName,
                    Role = role
                };

            var response = await Http.PostAsJsonAsync("http://localhost:5022/api/signup", signupRequest);

            if (response.IsSuccessStatusCode)
            {
                successMessage = "Account created successfully! Redirecting to login...";

                // Clear form
                fullName = string.Empty;
                username = string.Empty;
                password = string.Empty;
                role = string.Empty;

                // Redirect to login after delay
                await Task.Delay(2000);
                Navigation.NavigateTo("/login");
            }
            else
            {
                errorMessage = await response.Content.ReadAsStringAsync();
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Signup failed. Please try again.";
            Console.WriteLine(ex.Message);
        }
    }

    public class SignupRequest
    {
        public string Username { get; set; }
        public string Password { get; set; }
        public string FullName { get; set; }
        public string Role { get; set; }
    }
}